@model CarListModel

@{
    ViewBag.Title = "All Cars";
}

<h2 id="sellCarHeading">See all cars here</h2>

<h2>@TempData["message"]</h2>

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<form>
    <label class="create-car-labels">Sort by</label>
    <select name="sort">
        <option selected disabled>
            @Model.Sort
        </option>
        <option value="Manufacturer">Manufacturer</option>
        <option value="Condition">Condition</option>
        <option value="Year">Year</option>
        <option value="Price Asc">Price Asc</option>
        <option value="Price Desc">Price Desc</option>
    </select>
    <input type="text" name="searchQuery" value="@Model.SearchQuery" hidden />
    <button class="btn btn-primary sell-car-btn">Sort cars</button>
</form>

@if (Model.Cars.Any())
{
    @foreach (var c in Model.Cars)
    {
        <div class="well col-xs-12 col-sm-12col-md-12 col-lg-12 center-block car-all">
            <table class="table-responsive">
                <tr>
                    <td class="col-xs-4 col-sm-3 col-md-6 col-lg-4">
                        @if (c.Images.Count > 0)
                        {
                            <img src="~/images/@c.Images.FirstOrDefault().ImageUrl" alt="@(c.Manufacturer + " " + c.Model)" class="img-thumbnail img-responsive" />
                        }
                        else
                        {
                            <span>@c.Manufacturer Photo</span>
                        }
                    </td>
                    <td>
                        <div class="bg-faded p-1">
                            <p id="car-all-headings">
                                <span id="manufacturer-all">@c.Manufacturer</span><span>@c.Model</span>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span>#Id - @c.Id</span>
                                }
                                <span class="car-all-price" style="float:right">
                                    @c.Price &euro;
                                </span>
                            </p>
                            <p id="car-all-info">Year: @(c.YearOfProduction) With: @(c.TravelledDistance) km. Color: @c.Color Condition: @(c.Condition)</p>
                            <div id="actions-car-all">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="btn btn-danger btn-md delete-car-all-btn" asp-controller="Car" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                                    <a class="btn btn-warning btn-md edit-car-all-btn" asp-controller="Car" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                                }
                                <a class="btn btn-success btn-md detail-car-all-btn" asp-controller="Car" asp-action="Details" asp-route-id="@c.Id">Details</a>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    }

    @if (Model.Sort != null)
    {
        <ul class="pagination pagination-lg">
            <li class="page-item @previousDisabled">
                <a class="page-link @previousDisabled" asp-controller="Car" asp-action="AllCars" asp-route-page="@Model.PreviousPage" asp-route-searchQuery="@Model.SearchQuery" asp-route-sort="@Model.Sort" aria-label="Previous">
                    <span aria-hidden="true">«</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" asp-controller="Car" asp-action="AllCars" asp-route-page="@i" asp-route-searchQuery="@Model.SearchQuery" asp-route-sort="@Model.Sort">@i</a></li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link @nextDisabled" asp-controller="Car" asp-action="AllCars" asp-route-page="@Model.NextPage" asp-route-searchQuery="@Model.SearchQuery" asp-route-sort="@Model.Sort" aria-label="Next">
                    <span aria-hidden="true">»</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    }
    else
    {
        <ul class="pagination pagination-lg">
            <li class="page-item @previousDisabled">
                <a class="page-link @previousDisabled" asp-controller="Car" asp-action="AllCars" asp-route-page="@Model.PreviousPage" asp-route-searchQuery="@Model.SearchQuery" asp-route-sort="@Model.Sort" aria-label="Previous">
                    <span aria-hidden="true">«</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" asp-controller="Car" asp-action="AllCars" asp-route-page="@i" asp-route-searchQuery="@Model.SearchQuery" asp-route-sort="@Model.Sort">@i</a></li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link @nextDisabled" asp-controller="Car" asp-action="AllCars" asp-route-page="@Model.NextPage" asp-route-searchQuery="@Model.SearchQuery" asp-route-sort="@Model.Sort" aria-label="Next">
                    <span aria-hidden="true">»</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    }
}
else
{
    <h3> There are no cars in our catalog!</h3>
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/delete-car.js"></script>